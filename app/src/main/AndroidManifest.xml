<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robugos.advinci">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".dominio.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.MainActivity"
            android:configChanges="screenSize|keyboardHidden"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.ListaEventosActivity"
            android:label="@string/title_listaeventos"
            android:parentActivityName=".gui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainActivity" />
        </activity>
        <activity
            android:name=".gui.EventoActivity"
            android:label="@string/title_evento">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.ListaEventosActivity" />
        </activity>
        <activity
            android:name=".gui.CreateUserActivity"
            android:parentActivityName=".gui.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.LoginActivity" />
        </activity>
        <activity
            android:name=".gui.ForgotPassActivity"
            android:parentActivityName=".gui.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.LoginActivity" />
        </activity>
        <activity android:name=".gui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.InteressesActivity"
            android:label="@string/title_activity_interesses"
            android:parentActivityName=".gui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gui.MainActivity" />
        </activity>
    </application>

</manifest>