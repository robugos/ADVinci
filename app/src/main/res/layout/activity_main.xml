<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.robugos.advinci.gui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_perfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_color6"
            android:contentDescription="Perfil: Exibe o perfil do usuário"
            android:drawableLeft="@mipmap/ic_perfil"
            android:drawablePadding="30dp"
            android:paddingLeft="50dp"
            android:gravity="center_vertical|left"
            android:text="PERFIL"
            android:onClick="verInteresses"
            android:textColor="@color/colorIcon"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_programacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_color7"
            android:contentDescription="Programação: Exibe a lista de eventos da programação"
            android:drawableLeft="@mipmap/ic_programacao"
            android:drawablePadding="30dp"
            android:paddingLeft="50dp"
            android:gravity="center_vertical|left"
            android:onClick="verProgramacao"
            android:stateListAnimator="@null"
            android:text="PROGRAMAÇÃO"
            android:textColor="@color/colorIcon"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_historico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_color6"
            android:contentDescription="Histórico: Exibe a lista com o histórico de eventos participados"
            android:drawableLeft="@mipmap/ic_historico"
            android:drawablePadding="30dp"
            android:paddingLeft="50dp"
            android:gravity="center_vertical|left"
            android:onClick="verSplash"
            android:stateListAnimator="@null"
            android:text="HISTÓRICO"
            android:textColor="@color/colorIcon"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_config"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_color7"
            android:contentDescription="Ajustes: Exibe a lista de itens ajustáveis do aplicativo"
            android:drawableLeft="@mipmap/ic_ajustes"
            android:drawablePadding="30dp"
            android:paddingLeft="50dp"
            android:gravity="center_vertical|left"
            android:stateListAnimator="@null"
            android:text="AJUSTES"
            android:textColor="@color/colorIcon"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
</LinearLayout>